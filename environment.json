{
  "environments": [
    {
      "exchangeName": "Translator",
      "variants": [
        {
          "name": "Text",
          "queueNamePattern": "Translator-{contentType}-{origin}-Queue",
          "consumer": {
            "binding": {
              "routingKeys": [ "raw.text.xyz.create" ]
            }
          },
          "router": {
            "binding": {
              "routingKeys": [ "raw.text.abc.create", "raw.text.dpa.create" ]
            },
            "publish": {
              "exchangeName": "Document",
              "modes": [
                {
                  "name": "create",
                  "routingKey": "doc.*.*.create"
                },
                {
                  "name": "delete",
                  "RoutingKey": "doc.*.*.delete"
                }
              ]
            }
          }

        }
      ]
    },
    {
      "exchangeName": "EnricherCache",
      "variants": [
        {
          "name": "Refresh",
          "queueNamePattern": "EnricherCache-Refresh-Queue",
          "router": {
            "binding": {
              "routingKeys": [ "doc.*.*.create" ]
            },
            "publish": {
              "exchangeName": "Document",
              "modes": [
                {
                  "name": "create",
                  "routingKey": "doc.*.*.refresh"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "exchangeName": "Indexer",
      "variants": [
        {
          "name": "Index",
          "queueNamePattern": "Indexer-Create-Queue",
          "router": {
            "binding": {
              "routingKeys": [ "doc.*.*.refresh" ]
            },
            "publish": {
              "exchangeName": "Document",
              "modes": [
                {
                  "name": "index",
                  "routingKey": "doc.*.*.indexed"
                }
              ]
            }
          }
        },
        {
          "name": "Update",
          "queueNamePattern": "Indexer-Update-Queue",
          "consumer": {
            "binding": {
              "routingKeys": [ "partial.*.*.enrich" ]
            }
          }
        }
      ]
    },
    {
      "exchangeName": "Enricher",
      "variants": [
        {
          "name": "Text",
          "queueNamePattern": "Enricher-Text-TextEnricher-Queue",
          "router": {
            "binding": {
              "routingKeys": [ "doc.text.*.indexed" ]
            },
            "publish": {
              "exchangeName": "PartialDocument",
              "modes": [
                {
                  "name": "enrich",
                  "routingKey": "partial.*.*.enrich"
                }
              ]
            }
          }
        }
      ]
    }
  ]
} 